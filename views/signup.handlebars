
<div class="d-flex justify-content-center mt-5 mb-3">
    <h1>Sign Up</h1>
</div>
<div class="d-flex justify-content-center">
    {{#if messages}}
        <span class="fs-5 text-danger">{{messages}}</span>
    {{/if}}
</div>
<div class="container-fluid mx-auto mt-3" style="width: 400px;">
    <form action="/signup" method="POST">
        <div class="mb-3">
            <label for="usernameInput" class="form-label fs-4">Username</label>
            <input type="text" class="form-control form-control-lg" id="usernameInput" name="username" aria-describedby="usernameHelp">
            <div id="usernameHelp" class="form-text">Must be 8-20 characters long</div>
        </div>
        <div class="mb-3">
            <label for="passwordInput" class="form-label fs-4">Password</label>
            <input type="password" class="form-control form-control-lg" id="passwordInput" name="password" aria-describedby="passwordHelp">
            <div id="passwordHelp" class="form-text">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Sign up!</button>
    </form>
</div>
